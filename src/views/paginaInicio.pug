extends layout 

block links
  include language/paginaInicio-idiomas
  title=`${titlePG[idioma]}`
  link(rel="stylesheet" href="/public/css/paginaInicio.css")

block principal
  #carouselExampleIndicators.carousel.slide.carousel-fade(data-ride="carousel")
    ol.carousel-indicators
      li.active(data-target="#carouselExampleIndicators" data-slide-to="0")
      li(data-target="#carouselExampleIndicators" data-slide-to="1")
      li(data-target="#carouselExampleIndicators" data-slide-to="2")
    .carousel-inner(style="background-color: black;")
      .carousel-item.active
        img.d-block.w-100.image-carrosel(src="/public/images/milton-capa.webp" alt="Primeiro Slide")
        .carousel-caption.d-none.d-md-block
          h5
            strong Milton Santos
          p(style="color: white; font-style: italic;")
            strong=`${subtitleCAR1[idioma]}`
      .carousel-item(style="background-color: black;")
        img.d-block.w-100.image-carrosel(src="/public/images/milton-escritor.jpeg" alt="Segundo Slide")
        .carousel-caption.d-none.d-md-block
          h5
            strong Milton Santos
          p(style="color: white; font-style: italic;")
            strong=`${subtitleCAR2[idioma]}` 
      .carousel-item(style="background-color: black;")
        img.d-block.w-100.image-carrosel(src="/public/images/milton-sentado.jpg" alt="Terceiro Slide")
        .carousel-caption.d-none.d-md-block
          h5(style="color: white;")
            strong Milton Santos
          p(style="color: white; font-style: italic;")
            strong=`${subtitleCAR1[idioma]}` 
    a.carousel-control-prev(href="#carouselExampleIndicators" role="button" data-slide="prev")
      span.carousel-control-prev-icon(aria-hidden="true")
      span.sr-only Anterior
    a.carousel-control-next(href="#carouselExampleIndicators" role="button" data-slide="next")
      span.carousel-control-next-icon(aria-hidden="true")
      span.sr-only Próximo
  br
  br
  br
  br
